---
import { Image } from "astro:assets";
import servicio1 from "../assets/101a.png";
import servicio2 from "../assets/102a.png";
import servicio3 from "../assets/103a.png";
import servicio4 from "../assets/104a.png";
import servicio5 from "../assets/105a.png";
import servicio6 from "../assets/106a.png";
import motoBombas from "../assets/motobombas.png";
import hidroFlow from "../assets/hidro-flow.png";
import bombas from "../assets/bombas.png";
import mantenimiento from "../assets/mantenimiento.png";
import tanquesDeAgua from "../assets/tanques-de-agua.png";
import tablero from "../assets/tablero.png";
const services = [
  {
    id: 1,
    service:
      "Mantenimiento preventivo de motobombas para prolongar la vida de los equipos.",
    img: servicio1,
  },
  {
    id: 2,
    service:
      "Mantenimiento correctivo, reparación de equipos, evitando el desabastecimiento del agua.",
    img: servicio2,
  },
  {
    id: 2,
    service: "Lavado de tanques de agua.",
    img: servicio3,
  },
  {
    id: 1,
    service: "Suministro e instalación de repuestos de calidad.",
    img: servicio4,
  },
  {
    id: 1,
    service:
      "Instalación de sistemas hidráulicos y de equipos de bombeo. ",
    img: servicio5,
  },
  {
    id: 2,
    service:
      "Instalación de equipos hidráulicos y eléctricos.",
    img: servicio6,
  },
];
---

<section class="bg-white py-6 lg:py-20" id="servicios">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl md:text-5xl tracking-wide font-bold text-center mb-12">
      Servicios
    </h2>
    <div class="grid md:grid-cols-2 lg:max-w-[800px] mx-auto">
      {
        services.map((service) => (
          <div
            class={`transition delay-150 duration-300 ease-in-out hover:cursor-pointer hover:-translate-y-1 hover:scale-110 hover:bg-indigo-500 flex flex-col rounded lg:rounded-none lg:flex-row gap-6 items-center lg:gap-4 justify-center mt-4 text-white p-6 ${service.id % 2 == 0 ? "bg-blue-300" : "bg-DysamBlue"}`}
          >
            <p>{service.service}</p>
            <Image
              src={service.img}
              alt="partner.name"
              class="rounded-lg h-[196px] w-[196px]"
            />
          </div>
        ))
      }
    </div>
  </div>
</section>
