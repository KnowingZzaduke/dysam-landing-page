---
import { FaAccessibleIcon, FaPeopleCarry, FaHandHoldingMedical, FaRegHandshake  } from 'react-icons/fa';

const features = [
  { icon: FaAccessibleIcon, title: 'Disponibilidad de atención inmediata' },
  { icon: FaPeopleCarry , title: 'Experiencia en el sector' },
  { icon: FaHandHoldingMedical, title: 'Calidad garantizada en insumos' },
  { icon: FaRegHandshake, title: 'Buen trato y al instante' },
];

---

<section class="bg-DysamBlue py-6 lg:py-20 text-center">
  <div class="container mx-auto px-4 py-6">
    <h2 class="text-3xl lg:text-4xl text-white font-bold mb-8 tracking-wide">Somos la elección principal de los administradores de copropiedad.</h2>
    <div class="bg-white rounded-lg shadow-lg p-8">
      <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-4 gap-8 justify-center text-center">
        {features.map((feature) => (
          <div class="flex flex-col items-center">
            <feature.icon className="w-16 h-16 mb-4" />
            <p class="text-sm font-semibold">{feature.title}</p>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
