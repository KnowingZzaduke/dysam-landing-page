---
import { FaPhoneAlt, FaEnvelope } from "react-icons/fa";
---

<section class="bg-stone-100 py-20">
  <div class="container mx-auto px-4">
    <div class="max-w-6xl mx-auto flex flex-col lg:flex-row gap-16">
      <div class="lg:w-1/3">
        <h2 class="text-4xl md:text-5xl font-bold text-gray-800 mb-4">
          Contáctanos
        </h2>
        <div class="flex flex-col gap-2 text-sm text-gray-600">
          <p>Tr. 33sur 32B53 - Envigado - Colombia</p>
          <div class="flex gap-2 items-center">
            <FaPhoneAlt />
            <p>604 204 68 69</p>
          </div>
          <div class="flex gap-2 items-center">
            <FaPhoneAlt />
            <p>3004298113</p>
          </div>
          <div class="flex gap-2 items-center">
            <FaPhoneAlt />
            <p>3007560411</p>
          </div>
          <div class="flex gap-2 items-center">
            <FaEnvelope />
            <p>supervisortecnico@dysam.com.co</p>
          </div>
          <div class="flex gap-2 items-center">
            <FaEnvelope />
            <p>mantenimiento@dysam.com.co</p>
          </div>
        </div>
      </div>
      <div class="lg:w-2/3">
        <form class="space-y-6">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label
                for="firstName"
                class="block text-sm font-medium text-gray-700 mb-1"
                >Primer nombre*</label
              >
              <input
                type="text"
                id="firstName"
                name="firstName"
                required
                class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-green-500 focus:border-green-500"
              />
            </div>
            <div>
              <labels
                for="lastName"
                class="block text-sm font-medium text-gray-700 mb-1"
                >Apellido*</labels
              >
              <input
                type="text"
                id="lastName"
                name="lastName"
                required
                class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-green-500 focus:border-green-500"
              />
            </div>
          </div>
          <div>
            <label
              for="workEmail"
              class="block text-sm font-medium text-gray-700 mb-1"
              >Correo*</label
            >
            <input
              type="email"
              id="workEmail"
              name="workEmail"
              required
              class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-green-500 focus:border-green-500"
            />
          </div>
          <div>
            <label
              for="phoneNumber"
              class="block text-sm font-medium text-gray-700 mb-1"
              >Teléfono*</label
            >
            <input
              type="tel"
              id="phoneNumber"
              name="phoneNumber"
              required
              class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-green-500 focus:border-green-500"
            />
          </div>
          <div>
            <label
              for="message"
              class="block text-sm font-medium text-gray-700 mb-1"
              >Cómo podemos ayudarte?</label
            >
            <textarea
              id="message"
              name="message"
              rows="4"
              class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-green-500 focus:border-green-500"
            ></textarea>
          </div>
          <div>
            <button
              type="submit"
              class="px-6 py-3 bg-green-600 text-white text-sm font-medium rounded-md hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500"
            >
              Enviar
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>
